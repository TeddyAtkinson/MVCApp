@{
  Layout = "_Layout";
}

@using MVCApp.Models;

<h1>Vendor Details</h1>


<h2>Orders for Vendor:</h2>


  <ul>
    @foreach (Order order in @Model["orders"])
    {
      <li>
        <h4><u>@order.Title</u></h4>
        <h4>Date @order.Date</h4>
        <h4>Description: @order.Description</h4>
        <h4>Price: $@order.Price</h4>
      </li>
    }
  </ul>



<h4></h4><a href='/vendors/@Model["vendor"].Id/orders/new'>Add new Order</a></h4><br>
<h4><a href='/vendors'>Vendor List</a></h4><br>
<h4><a href='/'>Return to Homepage</a></h4>
