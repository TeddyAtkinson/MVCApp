@{
  Layout = "_Layout";
}

<h1>Vendors Listing Page</h1>

@using MVCApp.Models;
@if (@Model.Count == 0)
{
  <h3>No Vendors Added</h3>
}

@foreach (Vendor vendor in Model)
{
  <ul>
    <li><a href='/vendors/@vendor.Id'>@vendor.Name</a></li>
    <p>@vendor.Description</p>
  </ul>
}

<a href='/Vendors/Create'>ADD A NEW VENDOR</a>
<a href='/'>Return to Homepage</a>
